{
  "restartable": "rs",
  "ignore": [
    ".git",
    ".sass-cache",
    "node_modules/**/*",
    "app/client",
    "tasks",
    "tests",
    "assets"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "."
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}